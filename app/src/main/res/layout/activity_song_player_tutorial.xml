<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e4e4"
    android:id="@+id/parent">



    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#DA5F6A"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/help" />



    <TextView
        android:id="@+id/song_player_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tutorial_song_player_title"
        android:textColor="@color/BlackLetters"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/song_player_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_song_player_descr"
        android:textColor="@color/BlackLetters"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/song_player_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/songPlayer_reach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_song_player_reach"
        android:textColor="@color/BlackLetters"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/song_player_description"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/song_player_reach_example"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_below="@+id/songPlayer_reach"
        android:layout_alignEnd="@+id/song_clicked" />


    <TextView
        android:id="@+id/found_songs_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_song_player_list"
        android:textColor="@color/BlackLetters"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/song_player_reach_example"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/found_song_list"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_below="@+id/found_songs_list"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/song_clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_song_player_select_song"
        android:textColor="@color/BlackLetters"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/found_song_list"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/select_song_view"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_below="@+id/song_clicked"
        android:layout_toStartOf="@+id/song_player_title" />

    <ImageButton
        android:id="@+id/youtube_view"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_below="@+id/song_clicked"
        android:layout_toStartOf="@+id/found_song_list"
        android:layout_marginEnd="57dp" />



    <Button
        android:id="@+id/previous_dialog"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/previous"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/cancel_dialog"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/home_button"
        android:textColor="#ffffffff"
        android:text="@string/cancel"
        android:layout_below="@+id/select_song_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />



</RelativeLayout>
