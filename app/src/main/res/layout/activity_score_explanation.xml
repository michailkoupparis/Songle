<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context="com.example.michailkoupparis.songle.Home">


    <TextView
        android:id="@+id/home_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/score_explanation_title"
        android:gravity="center"
        android:textSize="40sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/MintCream"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/currentscoreView"
        android:layout_width="252dp"
        android:layout_height="34dp"
        android:textColor="@color/MintCream"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/current_score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/scoreExplanationView"
        android:layout_width="252dp"
        android:layout_height="34dp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/explanation"
        android:gravity="center"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/MintCream"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/overall_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:gravity="center"
        android:text="@string/overall_explanation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:id="@+id/difficulty_weight"
        android:layout_width="251dp"
        android:layout_height="21dp"
        android:textColor="@color/MintCream"
        android:text="@string/difficulty_weight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377"
        app:layout_constraintHorizontal_bias="0.12" />


    <TextView
        android:id="@+id/difficult_explanation"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="@string/diff_explanation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintVertical_bias="0.469" />

    <ImageButton
        android:id="@+id/difficultyView"
        android:layout_width="49dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintVertical_bias="0.482" />


    <TextView
        android:id="@+id/mode_weight"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="@color/MintCream"
        android:text="@string/mode_weight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintVertical_bias="0.563" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="@string/mode_explanation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612"
        app:layout_constraintHorizontal_bias="0.121" />

    <ImageButton
        android:id="@+id/modeView"
        android:layout_width="49dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintVertical_bias="0.621" />


    <TextView
        android:id="@+id/hint_penalty"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="@color/MintCream"
        android:text="@string/hint_penalty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintVertical_bias="0.669" />



    <TextView
        android:id="@+id/hint_explanation"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="@string/hint_explanation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746"
        app:layout_constraintHorizontal_bias="0.121" />
    <ImageButton
        android:id="@+id/hintView"
        android:layout_width="49dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintVertical_bias="0.711" />


    <TextView
        android:id="@+id/given_solution_points"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="@color/MintCream"
        android:text="@string/given_solution_points"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintVertical_bias="0.792" />
    <TextView
        android:id="@+id/given_solution_explanation"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="@string/given_solution_explanation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        app:layout_constraintHorizontal_bias="0.121" />

    <ImageButton
        android:id="@+id/give_solutionView"
        android:layout_width="49dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintVertical_bias="0.847" />

</android.support.constraint.ConstraintLayout>