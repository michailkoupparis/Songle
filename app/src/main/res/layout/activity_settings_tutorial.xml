<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e4e4"
    android:id="@+id/parent">



    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#DA5F6A"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/help" />



    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tutorial_settings_title"
        android:textColor="@color/BlackLetters"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:text="@string/tutorial_difficulty"
        android:layout_below="@+id/settings_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/difficulty_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:text="@string/tutorial_diff_explanation"
        android:layout_below="@+id/difficulty_view"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/difficulty_view"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_below="@+id/settings_title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:text="@string/tutorial_mode_title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/difficulty_explanation"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mode_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:text="@string/tutorial_mode_explanation"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/mode_title"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/mode_view"
        android:layout_width="46dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/eye"
        android:background="@null"
        android:onClick="setExampleView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/mode_title" />

    <Button
        android:id="@+id/previous_dialog"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/previous"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/next_dialog"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/next"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/cancel_dialog"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/home_button"
        android:textColor="#ffffffff"
        android:text="@string/cancel"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/mode_explanation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

